<% if params.key?("error") %>
  <div class="alert alert-danger">
    <%= params["error"] %>
  </div>
<% end %>

<div class="card">
  <h4 class="card-header"><%= params["operation"]&.capitalize || 'Enable' %> Actor for <%= @feature.key %></h4>
  <div class="card-body">
    <form action="<%= script_name %>/features/<%= @feature.key %>/actors" method="post" class="form-inline">
      <%== csrf_input_tag %>
      <input type="hidden" name="operation" value="<%= params["operation"] %>">
      <input type="text" name="value" value="<%= params["value"] %>" placeholder="<%= Flipper::UI.configuration.add_actor_placeholder %>" class="form-control mr-2">
      <input type="submit" value="<%= params["operation"]&.capitalize || 'Enable' %>" class="btn btn-primary">
    </form>
  </div>
</div>
